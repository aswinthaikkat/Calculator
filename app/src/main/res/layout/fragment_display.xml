<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:elevation="4dp"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    tools:context="com.wiseass.calculator.DisplayFragment">

    <ImageButton
        android:id="@+id/imb_delete"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@mipmap/ic_launcher"
        />


    <HorizontalScrollView

        android:id="@+id/scv_display"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_toRightOf="@+id/imb_delete"
        android:layout_toEndOf="@+id/imb_delete"
        android:background="@android:color/darker_gray"
        >

        <TextView

            android:id="@+id/lbl_display"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="end"
            tools:text="985+600"
            android:background="@android:color/holo_blue_bright"
            />

    </HorizontalScrollView>

</RelativeLayout>
